<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
	<appSettings>

		<!-- INICIO AUTENTICACAO -->
		
		<!-- flag para utilizar autenticacao por usuario e senha no banco de dados - para ativar, usar valor "SIM" -->
		<add key="usarUsuarioSenhaBanco" value="SIM"/>

		<!-- Usuario utilizado no banco de dados -->
		<add key="usuarioBanco" value="sa"/>

		<!-- Senha utilizada no banco de dados -->
		<add key="senhaBanco" value="Test#123"/>

		<!-- FIM AUTENTICACAO -->
		
		<!-- Servidor do banco de dados  -->
		<add key="servidor" value="localhost"/>
		
		<!-- Nome do banco de dados -->
		<add key="banco" value="GerenciadorFrotas"/>

		<!-- Diretório para onde serão exportados os registros (importante que o caminho seja passado com '\') -->
		<add key="export-directory" value="C:\"/>
		
	</appSettings>
</configuration>